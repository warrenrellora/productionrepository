<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration
PUBLIC '-//mybatis.org//DTD Config 3.0//EN'
'http://mybatis.org/dtd/mybatis-3-config.dtd'>
<configuration>
	<properties
		resource='ph/com/lserv/production/holidayencoding/resources/jdbc.properties' />
	<settings>
		<setting name="cacheEnabled" value="true" />
		<setting name="lazyLoadingEnabled" value="true" />
		<setting name="proxyFactory" value="JAVASSIST" />
		<setting name="logImpl" value="LOG4J2" />
	</settings>
	<typeAliases>
		<typeAlias
			type='ph.com.lserv.production.holidayencoding.model.HolidayEncoding'
			alias='HolidayEncoding'></typeAlias>
		<typeAlias
			type='ph.com.lserv.production.holidaytypereference.model.HolidayTypeReference'
			alias='HolidayTypeReference'></typeAlias>
		<typeAlias type='ph.com.lbpsc.production.user.model.User'
			alias='User'></typeAlias>
		<typeAlias
			type='ph.com.lbpsc.production.client.model.Client' alias='Client'></typeAlias>
		<typeAlias
			type='ph.com.lbpsc.production.company.model.Company' alias='Company'></typeAlias>
	</typeAliases>
	<environments default='development'>
		<environment id='development'>
			<transactionManager type='JDBC' />
			<dataSource type='POOLED'>
				<property name='driver' value='${jdbc.driverClassName}' />
				<property name='url'
					value='jdbc:mysql://${jdbc.host}/${jdbc.schemaName}?useCompression=true' />
				<property name='username' value='${jdbc.username}' />
				<property name='password' value='${jdbc.password}' />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper
			resource='ph/com/lserv/production/holidayencoding/data/mapper/HolidayEncodingMapper.xml' />
		<mapper
			resource='ph/com/lserv/production/holidaytypereference/data/mapper/HolidayTypeReferenceMapper.xml' />
		<mapper
			resource='ph/com/lbpsc/production/user/data/mapper/UserMapper.xml' />
		<mapper
			resource='ph/com/lbpsc/production/client/data/mapper/ClientMapper.xml' />
		<mapper
			resource='ph/com/lbpsc/production/company/data/mapper/CompanyMapper.xml' />
	</mappers>
</configuration>